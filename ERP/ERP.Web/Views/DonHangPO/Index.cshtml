@model IEnumerable<ERP.Web.Models.Database.BH_DON_HANG_PO>

@{
    ViewBag.Title = "Index";
}
<script src="~/Content/self-writing/js/Services/DonHangPOService.js"></script>
<script src="~/Content/self-writing/js/Controllers/DonHangPOCtrl.js"></script>


<div ng-app="myApp" ng-controller="DonHangPOCtrl">
    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã số PO</th>
                    <th>Ngày lên PO</th>
                    <th>Khách hàng</th>
                    <th>Tên liên hệ</th>
                    <th>Hình thức thanh toán</th>
                    <th>Thuế suất GTGT</th>
                    <th>Tiền thuế GTGT</th>
                    <th>Tổng tiền thanh toán</th>
                    <th>Số tiền viết bằng chữ</th>
                    <th>Nhân viên quản lý</th>
                    <th>Sửa</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="entry in list_donhangPO" class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td>{{entry.MA_SO_PO}}</td>
                    <td>{{entry.NGAY_LEN_PO | date: 'dd/MM/yyyy'}}</td>
                    <td>{{entry.TEN_CONG_TY}}</td>
                    <td>{{entry.TEN_LIEN_HE}}</td>
                    <td>{{entry.HINH_THUC_THANH_TOAN}}</td>
                    <td>{{entry.THUE_SUAT_GTGT}}</td>
                    <td>{{entry.TIEN_THUE_GTGT | currency: '':0}}</td>
                    <td>{{entry.TONG_TIEN_THANH_TOAN | currency : '' : 0}}</td>
                    <td>{{entry.SO_TIEN_VIET_BANG_CHU}}</td>
                    <td>{{entry.HO_VA_TEN}}</td>
                    <td><a href="/DonHangPO/Edit/{{entry.MA_SO_PO}}">Sửa đơn PO</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>