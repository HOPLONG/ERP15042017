<script src="~/Content/self-writing/js/Controllers/KhoXuat/KhoXuat.js"></script>
<div ng-app="myApp" ng-controller="KhoXuatController" class="panel-group">
    <br />
    <br />
    <div class="class=" content"">
        <div class="col-md-12" style="margin-top: -2.4%">
            <div>
                <table class="table " cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ngày hạch toán</th>
                            <th>Ngày chứng từ</th>
                            <th>Tên công ty</th>
                            <th>Nhân viên bán hàng</th>
                            <th>Tổng tiền </th>
                            <th>Lý do xuất</th>
                            <th>Loại xuất kho</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="item in ListXuatHang" itemsPerPage: 30 class="hover" ng-class-odd="'odd'" ng-class-even="'even'" pagination-id="phanhoi">
                            <td class="text-left">{{item.NGAY_HACH_TOAN}}</td>
                            <td class="text-left">{{item.NGAY_CHUNG_TU}}</td>
                            <td class="text-left">{{item.TEN_CONG_TY}}</td>
                            <td class="text-left">{{item.NHAN_VIEN_BAN_HANG}}</td>
                            <td class="text-left">{{item.TONG_TIEN | currency:""}}</td>
                            <td class="text-left">{{item.LY_DO_XUAT}}</td>
                            <td class="text-left">{{item.LOAI_XUAT_KHO}}</td>

                        </tr>
                        <!--Detail row-->
                        <tr dir-paginate-end=""></tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="9" style="border: none !important">
                                <dir-pagination-controls pagination-id="phanhoi" max-size="12" style="float:left;"
                                                         direction-links="true"
                                                         boundary-links="true">
                                </dir-pagination-controls>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>

