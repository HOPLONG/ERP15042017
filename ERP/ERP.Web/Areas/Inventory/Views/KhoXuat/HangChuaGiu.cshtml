<script src="~/Content/self-writing/js/Controllers/KhoXuat/KhoXuat.js"></script>
<div ng-app="myApp" ng-controller="KhoXuatController" class="panel-group">
    <br />
    <br />
    <div class="class=" content"">
        <div class="col-md-12" style="margin-top: -2.4%">
            <div>
                <input type="hidden" id="username" value="@Session["USERNAME"]" />
                <table class="table " cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã số PO</th>
                            <th>Ngày lên PO</th>
                            <th>Điều chỉnh</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Tên liên hệ </th>
                            <th>Tên công ty</th>
                            <th>Nhân viên</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="item in ListHangChuaGiu" itemsPerPage: 30 class="hover" ng-class-odd="'odd'" ng-class-even="'even'" pagination-id="phanhoi">
                            <td class="text-left">{{item.MA_SO_PO}}</td>
                            <td class="text-left">{{item.NGAY_LEN_PO}}</td>
                            <td class="text-left">{{item.MA_DIEU_CHINH}}</td>
                            <td class="text-left">{{item.SO_LUONG}}</td>
                            <td class="text-left">{{item.DON_GIA | currency:""}}</td>
                            <td class="text-left">{{item.TEN_LIEN_HE}}</td>
                            <td class="text-left">{{item.TEN_CONG_TY}}</td>
                            <td class="text-left">{{item.HO_VA_TEN}}</td>

                        </tr>
                        <!--Detail row-->
                        <tr dir-paginate-end=""></tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="9" style="border: none !important">
                                <dir-pagination-controls pagination-id="phanhoi" max-size="12" style="float:left;"
                                                         direction-links="true"
                                                         boundary-links="true">
                                </dir-pagination-controls>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>

